{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noResolve": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": false,
    "incremental": false,
    "baseUrl": "../../",
    "paths": {
      "@autodealers/core": ["./packages/core/src"],
      "@autodealers/core/*": ["./packages/core/src/*"],
      "@autodealers/crm": ["./packages/crm/dist", "./packages/crm/src"],
      "@autodealers/crm/*": ["./packages/crm/dist/*", "./packages/crm/src/*"],
      "@autodealers/messaging": ["./packages/messaging/dist", "./packages/messaging/src"],
      "@autodealers/messaging/*": ["./packages/messaging/dist/*", "./packages/messaging/src/*"],
      "@autodealers/inventory": ["./packages/inventory/dist", "./packages/inventory/src"],
      "@autodealers/inventory/*": ["./packages/inventory/dist/*", "./packages/inventory/src/*"],
      "@autodealers/ai": ["./packages/ai/dist", "./packages/ai/src"],
      "@autodealers/ai/*": ["./packages/ai/dist/*", "./packages/ai/src/*"],
      "@autodealers/billing": ["./packages/billing/dist", "./packages/billing/src"],
      "@autodealers/billing/*": ["./packages/billing/dist/*", "./packages/billing/src/*"],
      "@autodealers/shared": ["./packages/shared/dist", "./packages/shared/src"],
      "@autodealers/shared/*": ["./packages/shared/dist/*", "./packages/shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}




