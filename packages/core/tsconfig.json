{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@autodealers/core": ["./packages/core/src"],
      "@autodealers/core/*": ["./packages/core/src/*"],
      "@autodealers/crm": ["./packages/crm/src"],
      "@autodealers/crm/*": ["./packages/crm/src/*"],
      "@autodealers/messaging": ["./packages/messaging/src"],
      "@autodealers/messaging/*": ["./packages/messaging/src/*"],
      "@autodealers/inventory": ["./packages/inventory/src"],
      "@autodealers/inventory/*": ["./packages/inventory/src/*"],
      "@autodealers/ai": ["./packages/ai/src"],
      "@autodealers/ai/*": ["./packages/ai/src/*"],
      "@autodealers/billing": ["./packages/billing/src"],
      "@autodealers/billing/*": ["./packages/billing/src/*"],
      "@autodealers/shared": ["./packages/shared/src"],
      "@autodealers/shared/*": ["./packages/shared/src/*"]
    }
  },
  "include": ["src/**/*", "../ai/src/**/*", "../billing/src/**/*", "../crm/src/**/*", "../inventory/src/**/*", "../messaging/src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}




