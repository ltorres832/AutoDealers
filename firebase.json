{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": [
    {
      "target": "public-site",
      "public": "apps/public-web/hosting",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/_next/static/**", "destination": "/_next/static/**" },
        { "source": "**", "destination": "/index.html" }
      ],
      "headers": [
        { "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|js|css|eot|otf|ttf|ttc|woff|woff2|font.css|ico)", "headers": [{ "key": "Cache-Control", "value": "max-age=604800" }] }
      ],
      "cleanUrls": true,
      "trailingSlash": false
    },
    {
      "target": "admin-panel",
      "public": "apps/admin/hosting",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "/_next/static/**", "destination": "/_next/static/**" },
